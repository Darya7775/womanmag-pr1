doctype html

include ../components

block variables

html(lang="ru")
  head
    title= title
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width,initial-scale=1')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    meta(name='description', content='Лига компонентов')
    link(rel='apple-touch-icon', sizes='180x180', href='favicon/apple-touch-icon.png')
    link(rel='icon', type='image/png', sizes='32x32', href='favicon/favicon-32x32.png')
    link(rel='icon', type='image/png', sizes='16x16', href='favicon/favicon-16x16.png')
    link(rel='manifest', href='favicon/site.webmanifest')
    link(rel='mask-icon', href='favicon/safari-pinned-tab.svg', color='#5bbad5')
    meta(name='apple-mobile-web-app-title', content='Лига компонентов')
    meta(name='application-name', content='Лига компонентов')
    meta(name='msapplication-TileColor', content='#b91d47')
    meta(name='theme-color', content='#1f1f1f')

    meta(property='og:creator' content='Лига А')
    meta(property='og:card' content='summary_large_image')
    meta(property="og:title", content="Лига решений")
    meta(property="og:image", content="https://24fortest.ru/img/content/sharing.png")
    meta(name="twitter:image", content="https://24fortest.ru/img/content/sharing.png")
    meta(property="og:type", content="article")
    meta(property="og:image:type", content="png")
    meta(property="og:image:width", content="1300")
    meta(property="og:image:height", content="530")
    meta(property="og:url", content="https://24fortest.ru/")
    meta(property="og:description", content="Простые и понятные решения в помощь разработчикам от команды Лига А")

    link(rel='preload', href='fonts/IBMPlexSansLight.woff2', as='font', crossorigin='anonymous')
    link(rel='preload', href='fonts/IBMPlexSansSemiBold.woff2', as='font', crossorigin='anonymous')
    link(rel='stylesheet', href='css/style.min.css')

  body
    +sprite()
    .wrapper(class=wrapperMods)
      if (hasHeader)
        +header(headerMods, currentUrl)

      block main

      if (hasFooter)
        +footer(footerMods)

    block modals

    script(src="js/vendor.min.js")
    script(src="js/main.min.js")
    if pageJs
      script(src=pageJs)
